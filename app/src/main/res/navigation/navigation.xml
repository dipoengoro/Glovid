<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dicoding.myrecyclerview.ui.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_provincesFragment"
            app:destination="@id/provincesFragment" />
    </fragment>
    <fragment
        android:id="@+id/provincesFragment"
        android:name="com.dicoding.myrecyclerview.ui.ProvincesFragment"
        android:label="ProvincesFragment" />
    <fragment
        android:id="@+id/newsDetailFragment"
        android:name="com.dicoding.myrecyclerview.ui.NewsDetailFragment"
        android:label="NewsDetailFragment" >
        <argument
            android:name="news"
            app:argType="com.dicoding.myrecyclerview.model.News" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.dicoding.myrecyclerview.ui.NewsFragment"
        android:label="NewsFragment" >
        <action
            android:id="@+id/action_newsFragment_to_newsDetailFragment"
            app:destination="@id/newsDetailFragment" />
    </fragment>
</navigation>